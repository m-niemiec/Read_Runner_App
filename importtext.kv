#:import Clipboard kivy.core.clipboard.Clipboard
#:set imported_text_type 'Book'

<ImportText>:
    name: 'importtext'
    id: importtext

    BoxLayout:
        orientation: 'vertical'
        spacing: 20

        MDToolbar:
            title: 'Read Runner'
            left_action_items: [['keyboard-backspace', lambda x: app.root.get_screen('mainscreen').importtext.go_back()]]
            elevation: 10

        MDRaisedButton:
            text: 'Copy text from clipboard'
            font_style: 'H4'
            on_release: app.root.get_screen('mainscreen').importtext.import_from_clipboard()
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.95, 0.2)
            elevation: 10

        MDRaisedButton:
            text: 'Import text from file (.txt .pdf .mobi .epub)'
            font_style: 'H4'
            on_release: app.root.get_screen('mainscreen').importtext.import_from_file()
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.95, 0.2)
            elevation: 10

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            size_hint: (0.95, 0.4)

            MDTextField:
                id: imported_text_title_field
                multiline: False
                hint_text: 'Title'
                text: ''
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.9

            MDTextField:
                id: imported_text_author_field
                multiline: False
                hint_text: 'Author'
                text: ''
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.9

        MDLabel:
            id: imported_text_field
            multiline: True
            text: ' (import text to see preview ...)'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.95, 1.0)
            max_lines: 15
            theme_text_color: 'Secondary'
            font_size: 30
            canvas.before:
                Color
                    rgba: (0.15, 0.15, 0.15, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            size_hint: (1.0, 0.6)

            MDLabel:
                text: 'Select text type:'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (0.95, 0.2)
                font_size: 35
                theme_text_color: 'Primary'

            GridLayout:
                cols: 4
                adaptive_height: True
                padding: 20
                size_hint: (0.9, 0.5)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDLabel:
                    text: 'Book'
                    font_size: 30
                    halign: 'center'
                    theme_text_color: 'Secondary'

                MDCheckbox:
                    active: False
                    group: 'group'
                    on_active: root.imported_text_type = 'Book'
                    size_hint: (0.5, 1.0)

                MDLabel:
                    text: 'Article'
                    halign: 'center'
                    font_size: 30
                    theme_text_color: 'Secondary'

                MDCheckbox:
                    active: False
                    group: 'group'
                    on_active: root.imported_text_type = 'Article'
                    size_hint: (0.5, 1.0)

            MDFillRoundFlatButton:
                text: 'Save new Text!'
                font_style: 'H4'
                on_release: app.root.get_screen('mainscreen').importtext.save_new_text()
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (0.75, 0.3)
                elevation: 10

            MDLabel:
                text: ''
                size_hint: (0.05, 0.05)

<TextLoading>
    BoxLayout:
        orientation: 'vertical'

        MDLabel:
            id: import_progress
            text: root.import_progress

        MDSpinner:
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            active: True
