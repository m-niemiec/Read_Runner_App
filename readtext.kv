<ReadText>:
    name: 'readtext'
    id: readtext

    BoxLayout:
        orientation: 'vertical'
        id: boxlayout

        MDToolbar:
            title: 'Read Runner'
            left_action_items: [['keyboard-backspace', lambda x: app.root.get_screen('mainscreen').readtext.go_back()]]
            elevation: 10

        MDLabel:
            id: text_word
            text: 'Thyroparathyroidectomized'
            halign: "center"
            pos_hint_y: None
            font_style: 'H1'
            theme_text_color: 'Hint'

        MDLabel:
            id: progress_text
            text: ''
            pos_hint: {'x': 0.5, 'y': 0.5}

        MDProgressBar:
            id: progress_bar
            value: 0
            size_hint: (0.9, 1.0)
            pos_hint: {'x': 0.05, 'y': 0.5}

        MDBottomAppBar:
            MDToolbar:
                left_action_items: [['skip-backward', lambda x: app.root.get_screen('mainscreen').readtext.go_backward()]]
                right_action_items: [['skip-forward', lambda x: app.root.get_screen('mainscreen').readtext.go_forward()]]
                icon: 'play-pause'
                on_action_button: app.root.get_screen('mainscreen').readtext.stop_start()
                elevation: 10