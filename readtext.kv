<ReadText>:
    name: 'readtext'
    id: readtext

    BoxLayout:
        orientation: 'vertical'
        id: boxlayout

        MDToolbar:
            title: 'Read Runner'
            left_action_items: [['keyboard-backspace', lambda x: app.root.get_screen('mainscreen').readtext.go_back()]]
            elevation: 10

        FloatLayout:
            MDLabel:
                id: text_word
                text: '(press play)'
                halign: 'center'
                font_style: 'H5'
                theme_text_color: 'Hint'
                pos_hint: {'x': 0.0, 'y': 0.1}

            MDLabel:
                id: progress_text
                text: ''
                halign: 'center'
                theme_text_color: 'Hint'
                pos_hint: {'x': 0.0, 'y': -0.38}

            MDProgressBar:
                id: progress_bar
                value: 0
                size_hint: (0.9, 1.0)
                pos_hint: {'x': 0.05, 'y': -0.4}

        MDBottomAppBar:
            MDToolbar:
                left_action_items: [['skip-backward', lambda x: app.root.get_screen('mainscreen').readtext.go_backward()]]
                right_action_items: [['skip-forward', lambda x: app.root.get_screen('mainscreen').readtext.go_forward()]]
                icon: 'play-pause'
                on_action_button: app.root.get_screen('mainscreen').readtext.stop_start()
                elevation: 10
