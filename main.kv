#:include readtext.kv
#:include importtext.kv
#:include textsubmenu.kv
#:include preferences.kv
#:include help.kv

ScreenManager:
    MainScreen:
    Preferences:
    ReadText:
    ImportText:
    TextSubMenu:
    Help:

<MainScreen>:
    name: 'mainscreen'

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Read Runner'
            left_action_items: [['menu', lambda x: navigation_drawer.set_state()]]
            right_action_items: [['help-circle', lambda x: app.root.get_screen('mainscreen').show_instructions()]]
            elevation: 10

        ScrollView:
            MDList:
                id: container

        MDBottomAppBar:
            MDToolbar:
                mode: "free-end"
                right_action_items: [['plus', lambda x: app.root.get_screen('mainscreen').import_text()]]
                icon: ''
                icon_width: 0
                icon_height: 0
                elevation: 10

    MDNavigationDrawer:
        id: navigation_drawer
        BoxLayout:
            orientation: 'vertical'
            padding: '5dp'

            MDLabel:
                text: 'Read Runner - Menu'
                font_style: 'H5'
                pos_hint: {'x': 0.15, 'y': 0.5}
                size_hint_y: None
                theme_text_color: 'Primary'

            ScrollView:
                MDList:
                    TwoLineIconListItem:
                        text: '[size=20dp]Import Text[/size]'
                        secondary_text: '[size=13dp]Import new book to read.[/size]'
                        on_release: app.root.get_screen('mainscreen').import_text()
                        IconLeftWidget:
                            icon: "plus"

                    TwoLineIconListItem:
                        text: '[size=20dp]Preferences[/size]'
                        secondary_text: '[size=13dp]Change various settings.[/size]'
                        on_release: app.root.get_screen('mainscreen').view_preferences()
                        IconLeftWidget:
                            icon: "account-cog"

                    TwoLineIconListItem:
                        text: '[size=20dp]Help[/size]'
                        secondary_text: '[size=13dp]Learn more about ReadRunner.[/size]'
                        on_release: app.root.get_screen('mainscreen').view_help()
                        IconLeftWidget:
                            icon: "help-circle"

                    TwoLineIconListItem:
                        text: '[size=20dp]Exit[/size]'
                        secondary_text: '[size=13dp]Close ReadRunner.[/size]'
                        on_release: app.root.get_screen('mainscreen').close_app()
                        IconLeftWidget:
                            icon: "close-circle-outline"

            MDLabel:
                text: 'Quick tips:'
                font_style: 'Subtitle1'
                size_hint_y: None
                theme_text_color: 'Secondary'

            MDLabel:
                text: ' - To import book press plus icon in bottom right on main screen or in menu.'
                font_style: 'Subtitle1'
                size_hint_y: None
                theme_text_color: 'Secondary'

            MDLabel:
                text: ' - In preferences you can change reading speed and other things.'
                font_style: 'Subtitle1'
                size_hint_y: None
                theme_text_color: 'Secondary'
