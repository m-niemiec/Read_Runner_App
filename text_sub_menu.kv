<TextSubMenu>
    name: 'textsubmenu'
    id: textsubmenu
    height: '360dp'
    size_hint_y: None

    BoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: 'Settings'
            theme_text_color: 'Secondary'
            font_style: 'H5'

        MDLabel:
            id: progress_text
            theme_text_color: 'Secondary'
            text: ''

        ThreeLineAvatarIconListItem:
            pos_hint: {'x': -0.03, 'y': 0.5}
            size_hint: (1.0, 1.0)
            text: 'Change progress by:'
            secondary_text: 'Left arrows -10%'
            tertiary_text: 'Right arrows +10%'
            size_hint_y: None

            IconLeftWidget:
                icon: 'chevron-triple-left'
                on_release: app.root.get_screen('mainscreen').textsubmenu.move_progress_backward()

            IconRightWidget:
                icon: 'chevron-triple-right'
                on_release: app.root.get_screen('mainscreen').textsubmenu.move_progress_forward()

        TwoLineIconListItem:
            pos_hint: {'x': -0.03, 'y': 0.5}
            size_hint: (1.0, 1.0)
            text: 'Complete Text'
            secondary_text: 'Set text as read in 100%.'
            size_hint_y: None
            on_release: app.root.get_screen('mainscreen').textsubmenu.set_progress_as_completed()

            IconLeftWidget:
                icon: 'check'

        TwoLineIconListItem:
            pos_hint: {'x': -0.03, 'y': 0.5}
            size_hint: (1.0, 1.0)
            text: 'Restart Text'
            secondary_text: 'Back to start, set to 0%.'
            size_hint_y: None
            on_release: app.root.get_screen('mainscreen').textsubmenu.set_progress_as_zero()

            IconLeftWidget:
                icon: 'restart'

        TwoLineIconListItem:
            pos_hint: {'x': -0.03, 'y': 0.5}
            size_hint: (1.0, 1.0)
            text: 'Delete'
            secondary_text: 'Delete this text.'
            size_hint_y: None
            on_release: app.root.get_screen('mainscreen').textsubmenu.delete_selected_text()

            IconLeftWidget:
                icon: 'delete'
